<% if (site.tags.length){ %>
  <div class="widget-box">
    <h3 class="widget-title">
      <%= __('tags') %>
    </h3>
    <div class="widget">
      <%- list_tags({ 
          show_count: theme.show_count, 
          transform: function(name){
            return '<i class="fa" aria-hidden="true">' +name+'</i>';
          }
          }) %>
    </div>
  </div>
  <% } %>